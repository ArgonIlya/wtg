    <div class="container">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "alert alert-#{key}") %>
      <% end %>
      <%= yield %>
    </div>
    <%= render :partial => 'layouts/ga' if Rails.env == 'production' %>
  </body>
</html>